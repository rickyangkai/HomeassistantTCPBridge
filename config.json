{
  "name": "HomeAssistantTCPBridge",
  "version": "2.4.0",
  "slug": "homeassistant_tcp_bridge",
  "description": "An add-on to run a two-way connection between a Home Assistant and a Savant System.",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "boot": "auto",
  "startup": "services",
  "host_network": true,
  "homeassistant_api": true,
  "options": {
    "client_ip_whitelist": "",
    "enable_generic_call_service": true,
    "use_tls": false
  },
  "schema": {
    "client_ip_whitelist": "str",
    "enable_generic_call_service": "bool",
    "use_tls": "bool"
  },
  "ports": {
    "8080/tcp": 8080
  },
  "ports_description": {
    "8080/tcp": "Home Assistant Incomming Connection TCP server port"
  }
}
